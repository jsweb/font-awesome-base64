{
  "name": "@jsweb/font-awesome-base64",
  "description": "Font Awesome icons compiled with base64 embedded font to CSS instead of link to font files",
  "version": "2.0.1",
  "main": "dist/fa-all.css",
  "repository": "git@github.com:jsweb/font-awesome-base64.git",
  "author": "Alex Bruno CÃ¡ceres <git.alexbr@outlook.com>",
  "license": "MIT",
  "keywords": [
    "icons",
    "font",
    "awesome",
    "base64"
  ],
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@fortawesome/fontawesome-free": "^5.12.0",
    "husky": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rollup": "^1.27.14",
    "shx": "^0.3.2",
    "stylus": "^0.54.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && git add ."
    }
  },
  "scripts": {
    "clean": "shx rm -rf dist",
    "major": "npm version major && npm run push",
    "minor": "npm version minor && npm run push",
    "patch": "npm version patch && npm run push",
    "prepare": "npm run dist",
    "push": "git push && git push --tags",
    "lint": "prettier --config .prettierrc.json --write 'src/**/*.js'",
    "dist": "run-s dist:*",
    "dist:lint": "npm run lint",
    "dist:clean": "npm run clean",
    "dist:build": "rollup -c",
    "dist:css": "node dist/prepare.js"
  }
}
